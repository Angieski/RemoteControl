# Configuração do Servidor Relay Remote Control

# Porta do servidor
PORT=8080

# Ambiente (development, production)
NODE_ENV=production

# Configurações de segurança
MAX_CLIENTS=200
MAX_SESSIONS=100
SESSION_TIMEOUT=3600000
HEARTBEAT_INTERVAL=30000
CLEANUP_INTERVAL=60000

# Configurações de rate limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/remote-relay.log

# CORS Origins (separados por vírgula)
CORS_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

# SSL/TLS (se não usar nginx)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Banco de dados (opcional para persistência)
DB_ENABLED=false
DB_TYPE=sqlite
DB_PATH=/var/lib/remote-relay/database.db

# Métricas e monitoramento
METRICS_ENABLED=true
HEALTH_CHECK_PATH=/health
STATS_PATH=/stats

# Configurações avançadas
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6
BINARY_DATA_LIMIT=10485760